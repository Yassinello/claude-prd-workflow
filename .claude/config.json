{
  "$comment": "Startup Preset - Fast-moving, lean workflows for startups and small teams",
  "version": "0.3.1",
  "prd_workflow": {
    "enabled": true,
    "directories": {
      "draft": "product/prds/01-draft",
      "review": "product/prds/02-review",
      "ready": "product/prds/03-ready",
      "in_progress": "product/prds/04-in-progress",
      "complete": "product/prds/05-complete",
      "archived": "product/prds/99-archived"
    },
    "prd_id": {
      "prefix": "PRD",
      "separator": "-",
      "number_padding": 3
    },
    "branch_naming": {
      "prefix": "feat",
      "separator": "-",
      "pattern": "{prefix}/{prd_id}{separator}{feature_name}"
    },
    "worktree": {
      "enabled": true,
      "enforce": true,
      "fallback_on_error": false,
      "auto_health_check": true,
      "parent_directory": "..",
      "naming_pattern": "{project}-{feature}",
      "auto_install_dependencies": true,
      "auto_open_editor": false
    },
    "github": {
      "enabled": true,
      "create_issue_on_approval": true,
      "issue_labels": ["PRD", "P0", "P1", "P2"],
      "auto_assign": true,
      "milestone_tracking": false
    },
    "review": {
      "gate_enabled": true,
      "gate_requires_pass": true,
      "dimensions": {
        "core": [
          "scope_boundaries",
          "dependencies",
          "acceptance_criteria",
          "simplification"
        ],
        "contextual": {
          "frontend": ["ux_journey", "accessibility"],
          "backend": ["api_design", "data_model"],
          "security": ["threat_model", "compliance"]
        }
      },
      "auto_detect_context": true,
      "output_format": "compact",
      "grading_enabled": true,
      "minimum_grade": "C",
      "require_approval": true
    },
    "work_plan": {
      "enabled": true,
      "file_path": "product/WORK_PLAN.md",
      "update_on_status_change": true,
      "track_decisions": true
    }
  },
  "security": {
    "enabled": true,
    "auto_scan_on_commit": false,
    "scan_dependencies": true,
    "scan_code": true,
    "fail_on_high_severity": false,
    "ignore_patterns": [
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      "**/.next/**"
    ],
    "tools": {
      "npm_audit": true,
      "eslint_security": false,
      "git_secrets": false
    }
  },
  "quality": {
    "enabled": true,
    "auto_format_on_save": false,
    "linting": {
      "enabled": true,
      "auto_fix": true,
      "fail_on_error": false
    },
    "testing": {
      "enabled": true,
      "auto_run": false,
      "coverage_threshold": 70,
      "required_for_pr": false
    },
    "code_complexity": {
      "enabled": true,
      "max_complexity": 20,
      "warn_threshold": 15
    }
  },
  "orchestration": {
    "enabled": true,
    "parallel_features": 2,
    "dependency_resolution": true,
    "auto_merge_strategy": "squash",
    "conflict_resolution": "manual"
  },
  "agents": {
    "prd_reviewer": {
      "enabled": true,
      "auto_invoke": false,
      "strictness": "lenient"
    },
    "prd_implementer": {
      "enabled": true,
      "task_breakdown_granularity": "coarse"
    },
    "orchestrator": {
      "enabled": true,
      "coordination_mode": "simple",
      "show_pipeline": true,
      "require_consent": false
    },
    "security_expert": {
      "enabled": true,
      "scan_frequency": "on_demand"
    },
    "quality_assurance": {
      "enabled": true,
      "check_frequency": "on_demand"
    },
    "devops_engineer": {
      "enabled": false,
      "auto_setup_ci": false
    }
  },
  "notifications": {
    "enabled": false
  }
}
