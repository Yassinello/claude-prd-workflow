{
  "$comment": "Open Source Preset - Community-focused workflows with transparency and collaboration",
  "version": "1.0.0",
  "prd_workflow": {
    "enabled": true,
    "directories": {
      "draft": "docs/prds/draft",
      "review": "docs/prds/review",
      "ready": "docs/prds/ready",
      "in_progress": "docs/prds/in-progress",
      "complete": "docs/prds/complete",
      "archived": "docs/prds/archived"
    },
    "branch_naming": {
      "prefix": "feat",
      "prd_id_format": "RFC-{number}",
      "separator": "-",
      "pattern": "{prefix}/{prd_id}{separator}{feature_name}"
    },
    "worktree": {
      "enabled": false,
      "parent_directory": "..",
      "naming_pattern": "{project}-{feature}",
      "auto_install_dependencies": false,
      "auto_open_editor": false
    },
    "github": {
      "enabled": true,
      "create_issue_on_approval": true,
      "issue_labels": ["RFC", "feature", "P0", "P1", "P2", "help-wanted", "good-first-issue"],
      "auto_assign": false,
      "milestone_tracking": true
    },
    "review": {
      "dimensions": [
        "Clarity & Scope",
        "Technical Feasibility",
        "User Experience",
        "Dependencies & Blockers",
        "Acceptance Criteria",
        "Risk Assessment",
        "Simplification Opportunities",
        "Community Impact",
        "Documentation Quality"
      ],
      "grading_enabled": true,
      "minimum_grade": "B",
      "require_approval": true,
      "calibration_questions": true
    },
    "work_plan": {
      "enabled": true,
      "file_path": "ROADMAP.md",
      "update_on_status_change": true,
      "track_decisions": true
    }
  },
  "security": {
    "enabled": true,
    "auto_scan_on_commit": false,
    "scan_dependencies": true,
    "scan_code": true,
    "fail_on_high_severity": true,
    "ignore_patterns": [
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      "**/.next/**",
      "**/examples/**"
    ],
    "tools": {
      "npm_audit": true,
      "eslint_security": true,
      "git_secrets": false
    }
  },
  "quality": {
    "enabled": true,
    "auto_format_on_save": false,
    "linting": {
      "enabled": true,
      "auto_fix": false,
      "fail_on_error": false
    },
    "testing": {
      "enabled": true,
      "auto_run": false,
      "coverage_threshold": 80,
      "required_for_pr": true
    },
    "code_complexity": {
      "enabled": true,
      "max_complexity": 15,
      "warn_threshold": 10
    }
  },
  "orchestration": {
    "enabled": true,
    "parallel_features": 10,
    "dependency_resolution": true,
    "auto_merge_strategy": "squash",
    "conflict_resolution": "manual"
  },
  "agents": {
    "prd_reviewer": {
      "enabled": true,
      "auto_invoke": false,
      "strictness": "balanced"
    },
    "prd_implementer": {
      "enabled": true,
      "task_breakdown_granularity": "medium"
    },
    "orchestrator": {
      "enabled": true,
      "coordination_mode": "smart"
    },
    "security_expert": {
      "enabled": true,
      "scan_frequency": "on_pr"
    },
    "quality_assurance": {
      "enabled": true,
      "check_frequency": "on_pr"
    },
    "devops_engineer": {
      "enabled": false,
      "auto_setup_ci": false
    }
  },
  "notifications": {
    "enabled": false
  }
}
